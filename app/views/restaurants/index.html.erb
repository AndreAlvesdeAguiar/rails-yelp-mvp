<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table class = 'table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>phone</th>
      <th>Category</th>
      <th>Review </th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.category %></td>
        <td><%= restaurant.review %></td>
        <td><%= '⭐' * restaurant.rating %></td>
        <td><%= link_to 'Show', restaurant, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
